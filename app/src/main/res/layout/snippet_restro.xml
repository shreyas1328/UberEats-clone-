<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="0dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/restroCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        android:layout_margin="5dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="7dp">

            <ImageView
                android:id="@+id/restroCardImage"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/restroCardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="restroCardTitle"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:layout_marginLeft="11dp"/>

            <TextView
                android:id="@+id/restroCardDes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="restroCardTitle"
                android:textSize="14sp"
                android:layout_marginLeft="11dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"

                >
                <TextView
                    android:id="@+id/restroCardTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25-35mins"
                    android:background="@color/grey"
                    android:paddingHorizontal="5dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/restroCardRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.0 * (500+)"
                    android:background="@color/grey"
                    android:paddingHorizontal="5dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Special Description"
                android:textSize="14sp"
                android:layout_marginLeft="11dp"
                android:paddingBottom="7dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>